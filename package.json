{
  "name": "chipa",
  "version": "0.0.1",
  "description": "Extract code snippets from md files.",
  "main": "lib/index.js",
  "scripts": {
    "prettier": "prettier --no-semi --single-quote --trailing-comma es5",
    "test": "jest --verbose",
    "format": "npm run prettier -- --write './lib/**/*.js' && npm run prettier -- --write './test/**/*.js'",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gillchristian/chipa.git"
  },
  "keywords": [
    "markdown",
    "snippets",
    "code",
    "extract"
  ],
  "author": "Christian Gill <gillchristiang@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gillchristian/chipa/issues"
  },
  "homepage": "https://github.com/gillchristian/chipa#readme",
  "dependencies": {
    "glob": "^7.1.1",
    "markdown-to-ast": "^3.4.0",
    "ramda": "^0.23.0",
    "remark": "^7.0.0"
  },
  "devDependencies": {
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "lint-staged": "^3.4.0",
    "prettier": "^1.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  },
  "lint-staged": {
    "./test/**/*.js": [
      "npm run prettier -- --write",
      "git add"
    ],
    "./lib/**/*.js": [
      "npm run prettier -- --write",
      "git add"
    ]
  }
}
